extends layout

block content
  div(class='min-h-screen flex items-center justify-center')
    div(class='w-full max-w-xs')
      h1(class='text-2xl font-bold text-center mb-4') Registration
      form(action='/register', method='POST')
        div(class='mb-4')
          label(class='block text-sm font-semibold', for='username') Username
          input(id='username', class='w-full border p-2 rounded-md focus:outline-none focus:ring', type='text', name='username')
        
        div(class='mb-4')
          label(class='block text-sm font-semibold', for='password') Password
          input(id='password', class='w-full border p-2 rounded-md focus:outline-none focus:ring', type='password', name='password')
        
        button(class='w-full py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none', type='submit') Register
